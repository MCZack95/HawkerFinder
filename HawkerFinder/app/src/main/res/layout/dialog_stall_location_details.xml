<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_box"
    android:layout_gravity="center"
    android:padding="20sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <TextView
        android:layout_weight="2"
        android:id="@+id/dialog_stall_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="0sp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/dialog_stall_lat"
        android:layout_width="wrap_content"
        android:layout_height="0sp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/dialog_stall_long"
        android:layout_width="wrap_content"
        android:layout_height="0sp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/dialog_stall_postal_code"
        android:layout_width="wrap_content"
        android:layout_height="0sp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/dialog_stall_distance"
        android:layout_width="wrap_content"
        android:layout_height="0sp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/dialog_stall_displacement"
        android:layout_width="wrap_content"
        android:layout_height="0sp" />

</LinearLayout>